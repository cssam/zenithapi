<main>
    <h1>Update Activity</h1>
    <form name="form1" method="POST" action="/activityAPI/activity/<%= activity.id %>/update">
    <table>
        <tr>
            <td>Activity Name</td>
            <td><input type="text" name='activity_name' value='<%= activity.activity_name %>' ></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><input type="text" name="description" value='<%= activity.description %>' ></td>
        </tr>
        <tr>
            <td><input type="submit" name="save" value="Update" ></td>
            <td><input type="submit" name="save" value="Cancel" ></td>
        </tr>
    </table>
    </form>   
 </main>
