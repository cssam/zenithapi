<%- layout('layout.ejs') %>
<sub>
    <a href='/'>Home</a><br/><br/>
    <a href='/eventAPI/events/'>Events</a><br/><br/>
    <a href='/eventAPI/event/create' >Create new event</a><br/>
</sub>
<main>
    <section>
    <h2>Update Event</h2>
    <form name="form1" method="POST" action="/eventAPI/event/<%= event.id %>/update">
    <table>
        <tr>
            <td>Activity Name</td>
            <td>
                <select name="event.activity_name" >
                    <option value="event.activity"><%= event.activity.activity_name %></option>
                    <%  
                    activitys.forEach(function (activity) { %>
                    <option value="<%= activity.id %>"> <%= activity.activity_name %>
                    <% }) %>
                  </option>
                </select>

            </td>
        </tr>
        <tr>
            <td>Date</td>
            <td><input type="date" name="event_date" value='<%= event.event_date_formatted %>' ></td>
        </tr> 
        <tr>
            <td>Start Hour</td>
            <td><input type="time" name="start_hour" value='<%= event.start_hour %>'></td>
        </tr>   
        <tr>
            <td>End Hour</td>
            <td><input type="time" name="end_hour" value='<%= event.end_hour %>'></td>
        </tr>        
        <tr>
            <td>Is Active</td>
            <td>
                <% if(event.isActive == true) { %>
                <input type="checkbox" name="isActive" checked >
                <% } else { %>
                <input type="checkbox" name="isActive"  >
                <%}%>
            </td>
        </tr>   
        <tr>
            <td><input type="submit" name="save" value="Update" ></td>
            <td><input type="submit" name="save" value="Cancel" ></td>
        </tr>
    </table>
    </form>
</section>
 </main>
